<%- include('../header/Header'),{title : pageTitle} %>
<body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
        <!-- Sidebar -->
        <%- include('../dashboard/Dashboard', { route: currentRoute }) %>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Navbar -->
            <header class="bg-blue-800 text-white p-4 flex justify-between items-center sticky top-0">
                <%- include('../navbar/Navbar') %>
            </header>

            <!-- Mobile Dropdown Menu -->
            <%- include('../dropdown_menu/DropdownMenu') %>

            <!-- Add New Category Form -->
            <div class="max-w-xl mx-auto bg-white p-8 rounded-lg shadow-md my-24 text-red-300" style="background: linear-gradient(165deg, #b6460e 0%, #2109d5 100%);">
                <h2 class="text-2xl font-semibold mb-6">Add New Category</h2>
                <form id="addCategoryForm" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label class="block text-sm font-medium mb-1">Category Name</label>
                        <input type="text" placeholder="Category Name" class="input input-bordered w-full text-blue-700" name="category" required/>
                    </div>
                 
    
                    <div class="mb-4">
                        <label class="block text-sm font-medium mb-1">Choose Image </label>
                        <input type="file" class="file-input file-input-bordered file-input-secondary w-full max-w-xs" accept="image/*" name="image" required/>
                    </div>
                  
                        <button type="submit" class="btn btn-error text-white">Add Category</button>
                    </div>
                </form>
            </div>
        </main> 
    </div>

    <%- include('../footer/Footer') %>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../../js/Hamburger.js" type="text/javascript"> </script>
    <script src="../../js/NewCategory.js"></script>


</body>
</html>
