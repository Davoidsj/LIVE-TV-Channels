<%- include('header/Header'),{title : pageTitle} %>
<body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
        <!-- Sidebar -->
        <%- include('dashboard/Dashboard', { route: currentRoute }) %>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Navbar -->
            <header class="bg-blue-800 text-white p-4 flex justify-between items-center sticky top-0 z-10">
                <%- include('navbar/Navbar') %>
            </header>

            <!-- Mobile Dropdown Menu -->
            <%- include('dropdown_menu/DropdownMenu') %>

            <!-- New Stats Cards Container (daisyUI integration) -->
            <div class="p-4 text-red-500 flex justify-center">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl">
                    <!-- Categories Card -->
                    <div class="card bg-gradient-to-r from-blue-400 to-purple-500 shadow-lg m-4 flex flex-col">
                        <div class="card-body flex-grow">
                            <h2 class="card-title text-center text-white">Category List</h2>
                            <p class="text-center text-4xl font-bold text-white"><%= category.size %></p>
                            <div class="card-actions justify-center">
                                <a href="/categories" class="inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600"> View ALL
                                </a>
                                
                            </div>
                        </div>
                    </div>

                    <!-- Channels Card -->
                    <div class="card bg-gradient-to-r from-green-400 to-blue-500 shadow-lg m-4 flex flex-col">
                        <div class="card-body flex-grow">
                            <h2 class="card-title text-center text-white">Channels</h2>
                            <p class="text-center text-4xl font-bold text-white"><%= channels.length  %></p>
                            <div class="card-actions justify-center">
                                <a href="/channels" class="inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600"> View ALL
                                </a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main> 
    </div>

    <%- include('footer/Footer') %>
    <script src="../js/Hamburger.js" type="text/javascript"></script>
</body>
</html>
