<%- include('../header/Header'),{title : pageTitle} %>
<body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
        <!-- Sidebar -->
        <%- include('../dashboard/Dashboard', { route: currentRoute, id : routeId }) %>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Navbar -->
            <header class="bg-blue-800 text-white p-4 flex justify-between items-center sticky top-0">
                <%- include('../navbar/Navbar') %>
            </header>

            <!-- Mobile Dropdown Menu -->
            <%- include('../dropdown_menu/DropdownMenu') %>

            <!-- Add New Category Form -->
            <div class="max-w-xl mx-auto bg-white p-8 rounded-lg shadow-md my-24 text-yellow-300" style="background: linear-gradient(165deg, #5a4840 0%, #7e72d7 100%);">
                <h2 class="text-2xl font-semibold mb-6">Update Category</h2>
                <form id="updateCategoryForm" method="POST">
                    <div class="mb-4">
                        <label class="block text-sm font-medium mb-1">Category Name</label>
                        <input type="text" placeholder="Category Name" class="input input-bordered w-full text-orange-500" name="category" value="<%= ct.category.trim() %>" required/>
                    </div>
                 
    
                    <div class="mb-4">
                        <label class="block text-sm font-medium mb-1">Change Image URL </label>
                        <input type="text" placeholder="Category Image URL" class="input input-bordered w-full text-orange-500" name="cgURL"  value="<%= ct.cgurl.trim() %>" required/>
                    </div>
                  
                        <button type="button" id="updateButton"  data-id="<%= ct.id %>" class="btn btn-error text-white">Update Category</button>
                    </div>
                </form>
            </div>
        </main> 
    </div>

    <%- include('../footer/Footer')  %>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="../../js/Hamburger.js" type="text/javascript"> </script>
    <script src="../../js/Category.js"></script>

</body>
</html>
