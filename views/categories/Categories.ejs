<%- include('../header/Header'),{title : pageTitle} %>
<body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
        <!-- Sidebar -->
        <%- include('../dashboard/Dashboard', { route: currentRoute }) %>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Navbar -->
            <header class="bg-blue-800 text-white p-4 flex justify-between items-center sticky top-0 z-10">
                <%- include('../navbar/Navbar') %>
            </header>

            <!-- Mobile Dropdown Menu -->
            <%- include('../dropdown_menu/DropdownMenu') %>

           <!-- Category Content -->
           <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 m-6">
            <% if (categories.length > 0) { %>
                <% categories.forEach(cg => { %>
                    <div class="border border-gray-200 rounded-lg shadow-md bg-gradient-to-r from-red-500 to-purple-600 text-white">
                        <div class="p-4 flex flex-col items-center">
                            <figure class="flex justify-center items-center w-full h-32">
                                <img src="<%= cg.cgurl %>" alt="<%= cg.category %>" class="w-32 h-32 object-cover rounded-md">
                            </figure>
                            <h2 class="text-lg font-semibold mt-2 text-center"><%= cg.category %></h2>
                            <div class="flex space-x-2 mt-4">
                                <!-- Go Button -->
                                <button onclick="navigateToCategory('<%= cg.category %>')" class="btn btn-sm btn-warning text-white">Go</button>
                                
                                <!-- Delete Button -->
                                <button onclick="deleteCategory('<%= cg.id %>')" class="btn btn-sm btn-error text-white">Delete</button>
                                
                                <!-- Edit Button -->
                                <button onclick="editCategory('<%= cg.id %>')" class="btn btn-sm btn-secondary">Edit</button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="p-6 m-6 text-lg text-amber-500">No category available.</p>
            <% } %>
        </div>

        </main> 
    </div>

    <!-- footer -->
    <%- include('../footer/Footer') %>
  
  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="../../js/Hamburger.js" type="text/javascript"></script>
    <script src="../../js/Category.js" type="text/javascript"> </script>
</body>
</html>
