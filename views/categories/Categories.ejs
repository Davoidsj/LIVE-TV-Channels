<%- include('../header/Header'),{title : pageTitle} %>
<body class="bg-gray-100">
    <div class="flex flex-col md:flex-row">
        <!-- Sidebar -->
        <%- include('../dashboard/Dashboard', { route: currentRoute }) %>

        <!-- Main Content -->
        <main class="flex-1">
            <!-- Navbar -->
            <header class="bg-blue-800 text-white p-4 flex justify-between items-center sticky top-0 z-10">
                <%- include('../navbar/Navbar') %>
            </header>

            <!-- Mobile Dropdown Menu -->
            <%- include('../dropdown_menu/DropdownMenu') %>

           <!-- Category Content -->
           <div class="flex-1 grid grid-cols-1 md:grid-cols-3 gap-4 p-4 text-center ">
                <!-- First Category -->
                <div class="card border border-gray-200 shadow-lg bg-gradient-to-r from-blue-400 to-blue-600 text-white h-80">
                    <figure onclick="navigateToCategory('Sports')">
                        <img src="../../sports.png" alt="Whistle Sports" class="w-full h-64 object-cover rounded-md">
                    </figure>
                    <div class="card-body">
                        <h2 class="text-lg font-semibold">Sports</h2>
                    </div>
                </div>

                <!-- Second Category -->
                <div class="card border border-gray-200 shadow-lg bg-gradient-to-r from-green-400 to-teal-600 text-white h-80">
                    <figure onclick="navigateToCategory('News')">
                        <img src="../../news.png" alt="News EXTRA" class="w-full h-64 object-cover rounded-md">
                    </figure>
                    <div class="card-body">
                        <h2 class="text-lg font-semibold">News</h2>
                    </div>
                </div>

                <!-- Third Category -->
                <div class="card border border-gray-200 shadow-lg bg-gradient-to-r from-purple-400 to-pink-600 text-white h-80">
                    <figure onclick="navigateToCategory('Entertainment')">
                        <img src="../../entertainment.png" alt="Entertainment" class="w-full h-64 object-cover rounded-md">
                    </figure>
                    <div class="card-body">
                        <h2 class="text-lg font-semibold">Entertainment</h2>
                    </div>
                </div>
           </div>

        </main> 
    </div>

    <!-- footer -->
    <%- include('../footer/Footer') %>
    <script src="../../js/Hamburger.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="../../js/Navigate.js" type="text/javascript"> </script>
</body>
</html>
